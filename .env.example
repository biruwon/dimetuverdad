# Environment Configuration for dimetuverdad
# Copy this file to .env and update the values as needed

# =============================================================================
# TWITTER/X AUTHENTICATION (Required for tweet collection)
# =============================================================================

# These credentials are used by fetch_tweets.py to scrape Twitter/X data
X_USERNAME=your_twitter_username_here
X_PASSWORD=your_twitter_password_here
X_EMAIL_OR_PHONE=your_twitter_email_or_phone_here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Admin authentication token (CHANGE THIS IN PRODUCTION!)
ADMIN_TOKEN=change_this_in_production

# Flask secret key for sessions (auto-generated if not set)
FLASK_SECRET_KEY=

# =============================================================================
# LLM CONFIGURATION (Optional - for external APIs)
# =============================================================================

# API keys for external LLM services
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database path (relative to project root)
DATABASE_PATH=accounts.db

# Database connection timeout (seconds)
DB_TIMEOUT=30.0

# SQLite check_same_thread setting
DB_CHECK_SAME_THREAD=False

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Cache type (SimpleCache for development, RedisCache for production)
CACHE_TYPE=SimpleCache

# Default cache timeout (seconds)
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# FLASK SETTINGS
# =============================================================================

# Flask debug mode
FLASK_DEBUG=False

# Flask host
FLASK_HOST=0.0.0.0

# Flask port
FLASK_PORT=5000